{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "out", "dist"]
}
